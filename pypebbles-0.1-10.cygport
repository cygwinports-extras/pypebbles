inherit python

DESCRIPTION="Pygame Jeweled clone"
HOMEPAGE="http://pypebbles.sourceforge.net/"
SRC_URI="mirror://sourceforge/${PN}/${P}.tar.gz"
PATCH_URI="0.1-datadir.patch"

src_compile() { :; }
src_test() { :; }

src_install() {
	local pkgdatadir=/usr/share/${PN}

	cd ${S}
	newbin pypebbles.py pypebbles

	insinto ${pkgdatadir}/data
	doins data/*

	newicon data/bluedot.png ${PN}.png
	make_desktop_entry ${PN} PyPebbles ${PN} "Game;BlocksGame"
}
